<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_violet"
    tools:context=".ui.voting.ProposalVotingActivity">

    <TextView
        android:id="@+id/textView6"
        style="@style/TitleStyle"
        android:text="ГОЛОСОВАНИЕ ЗА ПРЕДЛОЖЕНИЕ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/voting_proposal_name"
        style="@style/FieldPresentationStyle"
        android:layout_marginTop="48dp"
        android:text="НАЗВАНИЕ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/voting_proposal_description"
        style="@style/FieldPresentationStyle"
        android:layout_height="120dp"
        android:layout_marginTop="22dp"
        android:gravity="start"
        android:paddingTop="20dp"
        android:text="ОПИСАНИЕ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voting_proposal_name" />

    <Button
        android:id="@+id/vote_for_btn"
        style="@style/RoundedBtnStyle"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:gravity="center"
        android:text="ЗА"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/vote_against_btn"
        style="@style/RoundedBtnStyle"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginEnd="28dp"
        android:gravity="center"
        android:text="ПРОТИВ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView19"
        style="@style/SubtitleStyle"
        android:layout_marginTop="48dp"
        android:text="ТЕКУЩИЕ РЕЗУЛЬТАТЫ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voting_proposal_description" />

    <TextView
        android:id="@+id/votes_for"
        style="@style/SubtitleStyle"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="60dp"
        android:text="300"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/voting_proposal_description" />

    <TextView
        android:id="@+id/textView23"
        style="@style/RoundedBtnStyle"
        android:layout_width="3dp"
        android:layout_height="78dp"
        android:layout_marginTop="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voting_proposal_description"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/votes_against"
        style="@style/SubtitleStyle"
        android:layout_marginStart="60dp"
        android:layout_marginTop="135dp"
        android:text="150"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/voting_proposal_description" />


</androidx.constraintlayout.widget.ConstraintLayout>